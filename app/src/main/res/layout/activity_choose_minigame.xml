<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBlue"
    android:orientation="horizontal">

    <!-- Caixa Bombeiro   -->
    <ImageButton
        android:id="@+id/imgbtn_firefighter"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="85dp"
        android:onClick="fireFighterGame"
        android:src="@drawable/jose_bombeiro"
        android:background="@drawable/round_corner"
        android:text="@string/bombeiro"
        />

    <Button
        android:id="@+id/desc_firefighter"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="317dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/gotham_bold_font"
        android:background="@drawable/round_corner_profession_name"
        android:text="@string/bombeiro"
        android:textSize="12dp" />

    <!-- Caixa Pasteleiro   -->
    <ImageButton
        android:id="@+id/imgbtn_baker"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/round_corner"
        android:onClick="cookGame"
        android:src="@drawable/jose_pasteleiro"
        android:text="@string/pasteleiro" />

    <Button
        android:id="@+id/desc_baker"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="317dp"
        android:background="@drawable/round_corner_profession_name"
        android:fontFamily="@font/gotham_bold_font"
        android:onClick="cookGame"
        android:text="@string/pasteleiro"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />


    <!-- Caixa Professor   -->
    <ImageButton
        android:id="@+id/imgbtn_teacher"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/round_corner_unavailable"
        android:src="@drawable/jose_professor"
        android:text="@string/professor"
        />

    <Button
        android:id="@+id/desc_teacher"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="317dp"
        android:background="@color/unavailableColor"
        android:fontFamily="@font/gotham_bold_font"
        android:text="@string/professor"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <!-- Caixa Pintor   -->
    <ImageButton
        android:id="@+id/imgbtn_painter"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="375dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/jose_pintor"
        android:text="@string/pintor"
        />

    <Button
        android:id="@+id/desc_painter"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="317dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/gotham_bold_font"
        android:background="@drawable/round_corner_profession_name"
        android:text="@string/pintor"
        android:textSize="12dp" />

    <!-- Caixa Aviador   -->
    <ImageButton
        android:id="@+id/imgbtn_pilot"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/round_corner"
        android:src="@drawable/jose_piloto"
        android:onClick="pilotGame"
        android:text="@string/aviador"
        />

    <Button
        android:id="@+id/desc_pilot"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginLeft="485dp"
        android:layout_marginTop="317dp"
        android:background="@drawable/round_corner_profession_name"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/gotham_bold_font"
        android:text="@string/aviador"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:onClick="backToMainMenu"
        android:src="@drawable/back" />


    <ImageView
        android:id="@+id/img_chooseMale"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:onClick="changeToMale"
        android:src="@drawable/jose_face" />

    <ImageView
        android:id="@+id/img_chooseFemale"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:onClick="changeToFemale"
        android:src="@drawable/maria_face" />

</RelativeLayout>
